<script>
// Script mejorado con debouncing y mejor performance
let currentTheme = null;
let themeUpdateTimeout = null;

function updateNavbarTheme(brightness, imageSrc = '') {
  const nav = document.querySelector("nav");
  const logo = document.getElementById("navbar-logo");
  const menuIconPath = document.getElementById("menu-icon-path");
  
  if (!nav) {
    return;
  }
  
  const threshold = 140;
  const isDark = brightness < threshold;
  const newTheme = isDark ? 'dark' : 'light';
  
  // Debounce theme changes
  clearTimeout(themeUpdateTimeout);
  themeUpdateTimeout = setTimeout(() => {
    if (currentTheme === newTheme) {
      return;
    }
    
    currentTheme = newTheme;
    
    // Apply theme classes
    nav.classList.remove('navbar-light', 'navbar-dark');
    nav.classList.add(`navbar-${newTheme}`);
    
    if (isDark) {
      if (logo) {
        logo.src = "/images/logo_white.png";
        logo.alt = "Logo para fondo oscuro";
      }
      if (menuIconPath) {
        menuIconPath.setAttribute("fill", "#fff");
      }
    } else {
      if (logo) {
        logo.src = "/images/logo_blue.png";
        logo.alt = "Logo para fondo claro";
      }
      if (menuIconPath) {
        menuIconPath.setAttribute("fill", "#061D41");
      }
    }
    
    window.dispatchEvent(new CustomEvent('navbar-theme-changed', {
      detail: { theme: newTheme, brightness }
    }));
  }, 100);
}

function hasGallery() {
  return document.querySelector('.mySwiper2') !== null;
}

window.addEventListener("slider-brightness", (e) => {
  if (!hasGallery()) return;
  
  const { brightness, imageSrc } = e.detail;
  updateNavbarTheme(brightness, imageSrc);
});

document.addEventListener('DOMContentLoaded', () => {
  const btnMenu = document.getElementById("toggle-button");
  
  if (btnMenu) {
    btnMenu.addEventListener("click", () => {
      const navLinks = document.querySelector(".nav-links");
      if (navLinks) {
        navLinks.classList.toggle("active");
      }
      const menuOptions = document.querySelectorAll(".nav-links ul li a");
      menuOptions.forEach((option) => {
        option.addEventListener("click", () => {
          if (navLinks) {
            navLinks.classList.remove("active");
          }
        });
      });
    });
  }
  
  setTimeout(() => {
    if (hasGallery()) {
      const activeImg = document.querySelector('.mySwiper2 .swiper-slide-active img');
      if (activeImg && activeImg.complete) {
        window.dispatchEvent(new CustomEvent('slider-brightness', { 
          detail: { brightness: 128 }
        }));
      }
    } else {
      updateNavbarTheme(200);
    }
  }, 300);
});

let resizeTimeout;
window.addEventListener('resize', () => {
  clearTimeout(resizeTimeout);
  resizeTimeout = setTimeout(() => {
    if (hasGallery()) {
      const activeImg = document.querySelector('.mySwiper2 .swiper-slide-active img');
      if (activeImg) {
        window.dispatchEvent(new CustomEvent('slider-brightness', { 
          detail: { brightness: currentTheme === 'dark' ? 100 : 180 }
        }));
      }
    } else {
      updateNavbarTheme(200);
    }
  }, 250);
});
</script>