<script>
  window.addEventListener("slider-brightness", (e) => {
    const nav = document.querySelector("nav");
    const logo = document.getElementById("navbar-logo");
    const menuIconPath = document.getElementById("menu-icon-path");
    if (!nav) return;
    const brightness = e.detail.brightness;
    if (brightness < 128) {
      nav.classList.add("navbar-dark");
      nav.classList.remove("navbar-light");
      logo.src = "/images/logo_blue.png"; // Logo para fondo oscuro
      menuIconPath.setAttribute("fill", "#061D41"); // Color azul claro para fondo oscuro
    } else {
      nav.classList.add("navbar-light");
      nav.classList.remove("navbar-dark");
      logo.src = "/images/logo_white.png"; // Logo para fondo claro
      menuIconPath.setAttribute("fill", "#fff");
    }
  });
  const btnMenu = document.getElementById("toggle-button")
  btnMenu.addEventListener("click", () => {
    const navLinks = document.querySelector(".nav-links");
    navLinks.classList.toggle("active");
  });
</script>
