    </div>
</section>

<style>
  section {
    padding: 50px 20px;
    box-sizing: border-box;
    width: 100%;
    position: absolute;
    top: 100px;
  }

  h2 {
    font-family: var(--cocogoose-light);
    font-size: 2.5rem;
    margin: 0;
    color: var(--light-blue);
  }

  h3 {
    font-family: var(--cocogoose-light);
    font-size: 1.5rem;
    margin: 10px 0;
    color: var(--light-blue);
  }

  .line {
    height: 4px;
    background: var(--light-blue);
    margin: 0px 0 40px -10px;
    width: 100%;
  }

 .gallery {
    display: flex;
    flex-direction: row;
    gap: 20px;
    flex-wrap: wrap;
    margin-bottom: 40px;
  }

  .gallery img {
    max-width: 300px;
    height: auto;
    border-radius: 12px;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .gallery img:hover {
    transform: scale(1.02);
  }
</style>
<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";

  // Inicializar todas las galerías
  ["#casa-abulia-gallery", "#casa-horizonte-gallery", "#casa-pacifico-gallery", "#casa-bosque-gallery", "#casa-andes-gallery"].forEach(
    (selector) => {
      const lightbox = new PhotoSwipeLightbox({
        gallery: selector,
        children: "a",
        pswpModule: () => import("photoswipe"),
      });
      lightbox.init();
    }
  );

</script>
